              width="w-9"
            />
            <CircularProgress
              title="PHP"
              color="#474A8A"
              percent={45}
              icon={php}
            />
            <CircularProgress
              title="C#"
              color="#189F21"
              percent={30}
              icon={csharp}
            />
            <CircularProgress
              title="Python"
              color="#306998"
              percent={65}
              icon={python}
            />
            <CircularProgress
              title="Rust"
              color="#FEC832"
              percent={30}
              icon={rust}
            />
            <CircularProgress
              title="Ruby on Rails"
              color="#CC0000"
              percent={25}
              icon={rails}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
